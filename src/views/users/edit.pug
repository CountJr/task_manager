extends /layouts/application.pug

block contents
  +formFor(f, { url: urlFor('usersUpdate'), method: 'post' })
    +input(f, 'email')
    +input(f, 'alias')
    +input(f, 'firstname')
    +input(f, 'lastname')
    +input(f, 'password_confirmation', { as: 'password' })
    input(type='hidden' name='_method' value='PATCH')
    +button(f)
